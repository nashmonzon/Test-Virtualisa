generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id         Int           @id @default(autoincrement())
  domain     String        @unique
  brand      String
  model      String
  kilometers Int           @default(0)
  status     VehicleStatus
  drivers    Driver[]
  trips      Trip[]
  Service    Service[]

  @@map("vehicle")
}

model Driver {
  id            Int         @id @default(autoincrement())
  firstName     String
  lastName      String
  dni           String      @unique
  licenseType   LicenseType
  licenseExpiry DateTime
  kilometers    Int         @default(0)
  vehicles      Vehicle[]
  trips         Trip[]

  @@map("driver")
}

model Price {
  id         Int   @id @default(autoincrement())
  pricePerKm Float
  month      Int
  year       Int

  @@map("price")
}

model Trip {
  id        Int      @id @default(autoincrement())
  driverId  Int
  vehicleId Int
  distance  Float
  startDate DateTime
  endDate   DateTime
  driver    Driver   @relation(fields: [driverId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])

  @@map("trip")
}

model Service {
  id        Int      @id @default(autoincrement())
  vehicleId Int
  date      DateTime
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])

  @@map("service")
}

enum VehicleStatus {
  AVAILABLE
  IN_REPAIR
}

enum LicenseType {
  PERSONAL
  PROFESSIONAL
}
